<script>
// Javascript pour navbar - sur petit écran, le logo disparait quand on scrolle
  document.addEventListener('DOMContentLoaded', function() {
    var logo = document.querySelector('.navbar-brand img');
    var hauteurDisparition = 100;

    function verifierPositionScroll() {
      if (window.scrollY > hauteurDisparition) {
        logo.style.opacity = '0';
        logo.style.transition = 'opacity 0.5s';
      } else {
        logo.style.opacity = '1';
      }
    }

    window.addEventListener('scroll', verifierPositionScroll);
  });
</script>

